{
  "compilerOptions": {
    "composite": true,

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2022"],

    "strict": true,
    "types": ["vite/client"],
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts"
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
